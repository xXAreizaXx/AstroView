{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@screens/*": ["./src/screens/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "strict": true,
  },
  "extends": "expo/tsconfig.base",
  "include": [
    ".expo/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts"
  ]
}
